      "source": [
        "from googlesearch import search\n",
        "from google.colab import files\n",
        "from google.colab import drive\n",
        "import requests\n",
        "import fitz\n",
        "from PIL import Image\n",
        "import requests\n",
        "from io import BytesIO\n",
        "import cv2\n",
        "import numpy as np\n",
        "from ultralytics import YOLO\n",
        "import matplotlib.pyplot as plt\n",
        "import os\n"
      ],
      "metadata": {
        "id": "pmk5J9Iw_ere"
      },
      "execution_count": null,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "\n",
        "\n",
        "model = YOLO('/content/drive/MyDrive/Circuit_UCLA_research/DEREK/weights/weights-08-26/best.pt')\n",
        "\n",
        "\n",
        "\n",
        "def detect_and_save_images(document, model, save_dir):\n",
        "    if not os.path.exists(save_dir):\n",
        "        os.makedirs(save_dir)\n",
        "\n",
        "    image_counter = 1\n",
        "\n",
        "    for page_num in range(len(document)):\n",
        "        page = document.load_page(page_num)\n",
        "        pix = page.get_pixmap()\n",
        "        img = Image.frombytes(\"RGB\", [pix.width, pix.height], pix.samples)\n",
        "        img_cv = cv2.cvtColor(np.array(img), cv2.COLOR_RGB2BGR)\n",
        "\n",
        "        results = model(img_cv)\n",
        "\n",
        "        detected = False\n",
        "        for result in results:\n",
        "            boxes = result.boxes\n",
        "            for box in boxes:\n",
        "                confidence = box.conf.item()\n",
        "                if confidence >= 0.75:\n",
        "                    xyxy = box.xyxy.cpu().numpy().astype(int).flatten()\n",
        "                    x1, y1, x2, y2 = xyxy\n",
        "                    label = int(box.cls)\n",
        "\n",
        "                    cv2.rectangle(img_cv, (x1, y1), (x2, y2), (0, 255, 0), 2)\n",
        "                    cv2.putText(img_cv, f'{label} {confidence:.2f}', (x1, y1-10), cv2.FONT_HERSHEY_SIMPLEX, 0.5, (0, 255, 0), 2)\n",
        "\n",
        "                    cropped_img = img_cv[y1:y2, x1:x2]\n",
        "                    cropped_img_path = os.path.join(save_dir, f'circuit_image_{image_counter}.png')\n",
        "                    cv2.imwrite(cropped_img_path, cropped_img)\n",
        "                    detected = True\n",
        "\n",
        "        if detected:\n",
        "            save_text_content(document, page_num, save_dir, image_counter)\n",
        "            image_counter += 1\n",
        "\n",
        "        if page_num % 3 == 0:\n",
        "            img_rgb = cv2.cvtColor(img_cv, cv2.COLOR_BGR2RGB)\n",
        "            plt.figure(figsize=(10, 10))\n",
        "            plt.imshow(img_rgb)\n",
        "            plt.title(f'Page {page_num + 1}')\n",
        "            plt.axis('off')\n",
        "            plt.show()\n",
        "\n",
        "def save_text_content(document, page_num, save_dir, image_counter):\n",
        "    text_content = \"\"\n",
        "\n",
        "    if page_num > 0:\n",
        "        text_content += document.load_page(page_num - 1).get_text()\n",
        "\n",
        "    text_content += document.load_page(page_num).get_text()\n",
        "\n",
        "    if page_num < len(document) - 1:\n",
        "        text_content += document.load_page(page_num + 1).get_text()\n",
        "\n",
        "    text_file_path = os.path.join(save_dir, f'detected_text_circuit_image_{image_counter}.txt')\n",
        "    with open(text_file_path, 'w') as text_file:\n",
        "        text_file.write(text_content)\n",
        "\n",
        "def assess_pdf(file_path=None, save_dir='detected_images'):\n",
        "    if file_path is None:\n",
        "        print(\"No PDF source provided. Please provide a file path.\")\n",
        "        return False\n",
        "\n",
        "    try:\n",
        "        document = fitz.open(file_path)\n",
        "    except Exception as e:\n",
        "        print(f\"Error opening PDF: {e}\")\n",
        "        return False\n",
        "\n",
        "    detect_and_save_images(document, model, save_dir)\n",
        "    return True\n",
        "\n",
        "file_path = '/content/drive/MyDrive/Circuit_UCLA_research/DEREK/Template_matching-redundant/textbook/book.pdf'\n",
        "save_dir = '/content/drive/MyDrive/Circuit_UCLA_research/DEREK/Crawler/Circuit_information/circuits'\n",
        "assess_pdf(file_path, save_dir)\n",
        "\n"
      ],
      "metadata": {
        "id": "kOE0ShhxC6_J"
      },
